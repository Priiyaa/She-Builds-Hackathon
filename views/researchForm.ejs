   <div class="container">
   	<div class="row">
   		<div class="col-lg-6">
   			<br>
   			<h3>Add Research Idea</h3>

   			<form action="/rform" method="post">
			
                <div class="fullForm">
			<div class="formPart">
                    <div class="form-class">
				<label>Research Title</label>
				<input type="text" name="research_title" autocomplete="off" class="form-control">
			</div>
			 
			 <div class="form-class">
				<label>College</label>
				<input type="text" name="college" autocomplete="off" class="form-control">
			</div>
			
			<div class="form-class">
				<label>Domain</label>
				<input type="text" name="domain" autocomplete="off" class="form-control">
			</div>
			<div class="form-class">
				<label>Description</label>
				<textarea class="form-control" name="research_area_desc">
				</textarea>
			</div>
            <div class="form-class">
                <label>Previous research experience <br> (optional)</label>
                    <input type="text" name="prev_research_exp" autocomplete="off" class="form-control">
            </div>
        </div>
       

            <div class="formPartition">
			<div class="form-class">
				<label>College Year</label>
				<input type="text" name="college_year" autocomplete="off" class="form-control">
			</div>
			<div class="form-class">
				<label>Google Scholar Link <br>(optional)</label>
					<input type="text" name="google_scholar" autocomplete="off" class="form-control">
			</div>
            <div class="form-class">
				<label>Name</label>
					<input type="text" name="name" autocomplete="off" class="form-control">
			</div>
            <div class="form-class">
				<label>Email</label>
					<input type="email" name="email" autocomplete="off" class="form-control">
			</div>
            <div class="form-class">
				<label>Phn No</label>
					<input type="text" name="mobile" autocomplete="off" class="form-control">
			</div>
            </div>
        <br>
    </div>
			<button type="submit" class="btn btn-success">Submit</button>
		
        </form>
   		</div>
   		
   	
   	
   </div>
